{
  "extends": "tsconfig/react-library.json",
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "compilerOptions": {
    "rootDir": ".",
    "strict": true,
    "outDir": "dts",
    "sourceMap": false,
    "emitDeclarationOnly": true,
    "declarationMap": false,
    "noImplicitAny": true,
    "alwaysStrict": true
  },
  "exclude": [
    "dist",
    "dts",
    "build",
    "node_modules",
    "tsup-bin.config.ts",
    "tsup-client.config.ts",
    "../../playground",
    ".basehub",
    "src/api-transaction.ts"
  ]
}
