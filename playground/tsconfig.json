{
  "extends": "tsconfig/nextjs.json",
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "dist",
    "strict": true,
    "alwaysStrict": true,
    "plugins": [{ "name": "next" }],
    "baseUrl": "./src",
    "paths": {
      "@basehub": ["../.basehub"],
      "~/*": ["*"]
    }
  },
  "exclude": ["node_modules"],
  "include": ["src", "next-env.d.ts", ".next/types/**/*.ts", "src/lib/basehub/basehub.d.ts", "src/lib/basehub/basehub.config.ts"]
}
